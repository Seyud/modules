---
import type { CollectionEntry } from 'astro:content';

interface Props {
  module: CollectionEntry<'modules'>['data'];
}

const { module } = Astro.props;

const displayName = module.name;
const description = module.summary || module.description || "No description provided.";
const author = module.owner || "Unknown"; // Wait, schema doesn't have owner directly, it has collaborators.
// Let's check schema. collaborators is array.
// We can use the first collaborator or additionalAuthors.

const authors = [];
if (module.additionalAuthors) {
    authors.push(...module.additionalAuthors.map(a => a.name));
}
if (module.collaborators && module.collaborators.length > 0) {
    authors.push(...module.collaborators.map(c => c.name || c.login));
}
const authorString = authors.slice(0, 2).join(', ') + (authors.length > 2 ? '...' : '');

const latestVersion = module.latestRelease || module.latestBetaRelease || module.latestSnapshotRelease;
const updatedAtValue = (module as { updatedAt?: string | Date | null }).updatedAt;
const updatedAtDate = updatedAtValue instanceof Date
    ? updatedAtValue
    : updatedAtValue
        ? new Date(updatedAtValue)
        : null;
const formattedUpdatedAt = updatedAtDate && !Number.isNaN(updatedAtDate.valueOf())
    ? updatedAtDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })
    : null;
---

<a href={`/module/${module.name}`} class="group relative flex flex-col rounded-2xl border border-gray-200 dark:border-slate-800 bg-white dark:bg-slate-900/50 p-6 hover:border-blue-500/50 hover:bg-gray-50 dark:hover:bg-slate-900 hover:shadow-2xl hover:shadow-blue-500/10 transition-all duration-300">
    <div class="flex items-start justify-between mb-4 gap-4">
        <div class="flex-1 min-w-0">
            <h3 class="text-xl font-bold text-gray-900 dark:text-slate-100 truncate group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {displayName}
            </h3>
            <p class="text-sm text-gray-500 dark:text-slate-400 mt-1 flex items-center gap-2 truncate">
                {authorString && (
                    <span class="flex items-center gap-1 truncate">
                        <svg class="w-3 h-3 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                        <span class="truncate">{authorString}</span>
                    </span>
                )}
                {authorString && formattedUpdatedAt && <span class="w-1 h-1 rounded-full bg-gray-400 dark:bg-slate-600 flex-shrink-0"></span>}
                {formattedUpdatedAt && (
                    <span class="flex-shrink-0">{formattedUpdatedAt}</span>
                )}
            </p>
        </div>
        {module.stargazerCount !== undefined && module.stargazerCount !== null && (
            <div class="flex items-center gap-1 text-yellow-500 bg-yellow-500/10 px-2 py-1 rounded-lg whitespace-nowrap flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="text-xs font-bold">{module.stargazerCount}</span>
            </div>
        )}
    </div>
    
    <p class="text-gray-600 dark:text-slate-300 text-sm line-clamp-2 mb-6 flex-1">
        {description}
    </p>

    <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-100 dark:border-slate-800/50">
        <div class="flex items-center gap-2">
            {latestVersion && (
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-500/10 text-blue-700 dark:text-blue-400 border border-blue-200 dark:border-blue-500/20">
                    {latestVersion}
                </span>
            )}
        </div>
        <span class="text-blue-600 dark:text-blue-400 text-sm font-medium group-hover:translate-x-1 transition-transform flex items-center gap-1">
            View Details
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
        </span>
    </div>
</a>
