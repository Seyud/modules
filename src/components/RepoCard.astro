---
import type { CollectionEntry } from 'astro:content';

interface Props {
  module: CollectionEntry<'modules'>['data'];
}

const { module } = Astro.props;

const displayName = module.moduleName || module.moduleId;
const description = module.summary || module.moduleName || "No description provided.";

const authors = module.authors || [];
const displayAuthors = authors.slice(0, 3);
const hasMoreAuthors = authors.length > 3;

const latestVersion = module.latestRelease || module.latestBetaRelease || module.latestSnapshotRelease;
const updatedAtValue = (module as { updatedAt?: string | Date | null }).updatedAt;
const updatedAtDate = updatedAtValue instanceof Date
    ? updatedAtValue
    : updatedAtValue
        ? new Date(updatedAtValue)
        : null;
const formattedUpdatedAt = updatedAtDate && !Number.isNaN(updatedAtDate.valueOf())
    ? updatedAtDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })
    : null;
---

<a href={`/module/${module.moduleId}`} class="group relative flex flex-col rounded-2xl border border-gray-200 dark:border-slate-800 bg-white dark:bg-slate-900/50 p-6 hover:border-blue-500/50 hover:bg-gray-50 dark:hover:bg-slate-900 hover:shadow-2xl hover:shadow-blue-500/10 transition-all duration-300">
    <div class="flex items-start justify-between mb-2 gap-4">
        <div class="flex-1 min-w-0">
            <h3 class="text-xl font-bold text-gray-900 dark:text-slate-100 truncate group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {displayName}
            </h3>
            <div class="text-sm text-gray-500 dark:text-slate-400 mt-1 space-y-0.5">
                {displayAuthors.length > 0 && (
                    <div class="flex items-center gap-1 flex-wrap">
                        <svg class="w-3 h-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                        <span class="truncate">
                            {displayAuthors.map((author, index) => (
                                <>{author.name}{(index < displayAuthors.length - 1) && ','}{' '}</>
                            ))}
                            {hasMoreAuthors && '...'}
                        </span>
                    </div>
                )}
                {formattedUpdatedAt && (
                    <div class="flex items-center gap-1">
                        <svg class="w-3 h-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span>{formattedUpdatedAt}</span>
                    </div>
                )}
            </div>
        </div>
        {module.stargazerCount !== undefined && module.stargazerCount !== null && (
            <div class="flex items-center gap-1 text-yellow-500 bg-yellow-500/10 px-2 py-1 rounded-lg whitespace-nowrap flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="text-xs font-bold">{module.stargazerCount}</span>
            </div>
        )}
    </div>
    
    <p class="text-gray-600 dark:text-slate-300 text-sm line-clamp-2 mb-4 flex-1">
        {description}
    </p>

    <div class="flex items-center justify-between mt-auto pt-3 border-t border-gray-100 dark:border-slate-800/50">
        <div class="flex items-center gap-2">
            {latestVersion && (
                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-500/10 text-blue-700 dark:text-blue-400 border border-blue-200 dark:border-blue-500/20">
                    {latestVersion}
                </span>
            )}
        </div>
        <span class="text-blue-600 dark:text-blue-400 text-sm font-medium group-hover:translate-x-1 transition-transform flex items-center gap-1">
            View Details
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
        </span>
    </div>
</a>
